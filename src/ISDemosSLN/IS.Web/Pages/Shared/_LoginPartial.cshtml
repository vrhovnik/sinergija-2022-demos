<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <span class="navbar-text text-dark">Hello <b>@User.Identity?.Name</b>!</span>
        <li class="nav-item">
            <a asp-action="SignOut"
               asp-area="MicrosoftIdentity"
               asp-controller="Account"
               class="nav-link text-dark">
                Sign out
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-action="SignIn"
               asp-area="MicrosoftIdentity"
               asp-controller="Account"
               class="nav-link text-dark">
                Sign in
            </a>
        </li>
    }
</ul>